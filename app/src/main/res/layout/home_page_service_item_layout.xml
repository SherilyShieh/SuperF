<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/roundline_layout"
    android:layout_width="332dp"
    android:layout_height="138dp">

    <LinearLayout
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/layout_vertical_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:background="@null"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/head_portrait" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/head_portrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/m_name"
                        android:drawablePadding="7dp"
                        android:drawableEnd="@mipmap/dining_1"
                        android:drawableRight="@mipmap/dining_1"
                        tools:text="红岭电动车维修店"
                        android:textColor="@color/homepageServerText1"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/worker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:gravity="center"
                        tools:text="张大大"
                        android:layout_centerVertical="true"
                        android:textColor="@color/homepageServerText1"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:layout_toRightOf="@+id/name"
                        android:id="@+id/gender_age"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/appText6"
                        tools:text="38岁"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:drawablePadding="3dp"
                        android:drawableStart="@mipmap/dining_2"
                        android:drawableLeft="@mipmap/dining_2"
                        android:background="@drawable/gender_bg_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        tools:text="35元起"
                        android:textSize="18sp"
                        android:textColor="@color/homepageServerText2"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.5"
                        android:isIndicator="true"
                        style="@style/MyRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/scope"
                        android:layout_toRightOf="@+id/rating_bar"
                        android:layout_marginLeft="5dp"
                        tools:text="4.5"
                        android:textColor="@color/homepageServerText2"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@+id/scope"
                        android:id="@+id/activity_jian"
                        android:background="@null"
                        android:src="@mipmap/fitness_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/activity_jian"
                        android:id="@+id/activity_fan"
                        android:background="@null"
                        android:src="@mipmap/lend_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appText10"
                        android:textSize="11sp"
                        tools:text="1.1km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
               <TextView
                   android:visibility="gone"
                   android:id="@+id/merchant_address"
                   android:gravity="center_vertical"
                   style="@style/TextViewEllipsizeEnd"
                   android:drawableStart="@mipmap/add_h"
                   android:drawableLeft="@mipmap/add_h"
                   android:drawablePadding="3dp"
                   android:textSize="11sp"
                   android:textColor="@color/appText3"
                   tools:text="这是一串文字描述的是一个很详细很具体而且很长的文字"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/worker_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="籍贯:"
                        android:textSize="11sp"
                        android:textColor="@color/appText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/address"
                        android:layout_marginLeft="2dp"
                        tools:text="浙江杭州"
                        android:textSize="11sp"
                        android:textColor="@color/appText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="11sp"
                        android:text="从业:"
                        android:textColor="@color/appText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        tools:text="3年"
                        android:layout_marginLeft="2dp"
                        android:textSize="11sp"
                        android:textColor="@color/appText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <TextView
                    android:id="@+id/service_type"
                    style="@style/TextViewEllipsizeEnd2"
                    android:textColor="@color/appText10"
                    android:textSize="12sp"
                    tools:text="小时工、清洁工、月嫂、装修大爷、杂技演员、特效摄影师、航天员、国家主席、学校领导"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:dividerPadding="2dp"
            android:divider="@drawable/layout_horizontal_divider"
            android:showDividers="middle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <FrameLayout
                android:id="@+id/take_order"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="6dp"
                    android:drawableLeft="@mipmap/borrow_1"
                    android:drawableStart="@mipmap/borrow_1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="下单"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/call_phone"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="6dp"
                    android:drawableLeft="@mipmap/cabinet1"
                    android:drawableStart="@mipmap/cabinet1"
                    android:layout_gravity="center"
                    android:text="电话"
                    android:textColor="@color/homepageServerText1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>